{
  "name": "web-scrobbler.github.io",
  "version": "1.0.0",
  "author": "Web Scrobbler team",
  "description": "Web Scrobbler website",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/web-scrobbler/web-scrobbler.github.io"
  },
  "license": "MIT",
  "devDependencies": {
    "eslint": "7.32.0",
    "eslint-config-web-scrobbler": "2.1.1",
    "html-validate": "7.14.0",
    "live-server": "^1.2.2",
    "prettier": "^2.8.8",
    "prettier-config-web-scrobbler": "0.1.0",
    "stylelint": "15.4.0",
    "stylelint-config-web-scrobbler": "0.2.0"
  },
  "engines": {
    "node": ">=16.14.0"
  },
  "scripts": {
    "lint": "eslint *.js && stylelint *.css && html-validate *.html",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "eslintConfig": {
    "extends": "web-scrobbler",
    "env": {
      "browser": true
    },
    "parserOptions": {
      "sourceType": "script"
    }
  },
  "prettier": "prettier-config-web-scrobbler",
  "stylelint": {
    "extends": "stylelint-config-web-scrobbler"
  }
}
